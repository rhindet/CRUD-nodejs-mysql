<%- include('partials/_header') %>


<div class="container">
    <div class="row mt-5 ">
        <div class="col-md-9">
              <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>nÂº</th>
                        <th>Name</th>
                        <th>ApellidoPaterno</th>
                        <th>ApellidoMaterno</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                     <% if(data){ %>
                       <%for(var i=0;i< data.length;i++){%>  
                          <tr>
                            <td><%= (i+1) %></td>
                            <td><%= data[i].nombre %></td>
                            <td><%= data[i].ApellidoPaterno %></td>
                            <td><%= data[i].ApellidoMaterno %></td>
                            <td><%= data[i].direccion %></td>
                            <td><%= data[i].phone %></td>
                            <td>
                                <a href="/delete/<%=data[i].id%>" class="btn btn-danger ">Delete</a>
                                <a href="/update/<%=data[i].id%>" class="btn btn-info  ">Update</a>
                            </td>
                          </tr>
                        <% } %>    
                     <%  } %>   
                </tbody>
              </table>  
        </div>
        <div class="col-md-5">
            <div class="card">
                 <div class="card-body">
                     <form action="/search" method="post">
                         <div class="form-group">
                             <input type="text"   name="nombre2" placeholder="Name" class="form-control">
                         </div>
                        
                         
                         <button type="submit" class="btn btn-primary mt-1 mb-4">Search by name</button>
                     </form>
                     <form action="/search2" method="post">
                        <div class="form-group">
                            <input type="text"   name="ApellidoPaterno2" placeholder="ApellidoPaterno" class="form-control">
                        </div>
                       
                        
                        <button  type="submit" class="btn btn-primary mt-1 mb-4">Search by Apellido Paterno</button>
                    </form>
                    <form action="/search3" method="post">
                        <div class="form-group">
                            <input type="text"   name="ApellidoMaterno2" placeholder="ApellidoMaterno" class="form-control">
                        </div>
                       
                        
                        <button type="submit" class="btn btn-primary mt-1 ">Search by Apellido Materno</button>
                    </form>
                 </div>
            </div>
         </div>
        <div class="col-md-4">
           <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" required name="nombre" placeholder="Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" required name="ApellidoPaterno" placeholder="ApellidoPaterno" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" required  name="ApellidoMaterno" placeholder="ApellidoMaterno" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text"  required name="direccion" placeholder="Address" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text"  required name="phone" placeholder="Phone" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Save Customer</button>
                    </form>
                </div>
           </div>
        </div>

        
    </div>
</div>


<%- include ('partials/_footer') %>
